{% extends 'templates/base.html.twig' %}
{% block body %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 animated fadeIn">
                {% if service.filename %}
                    {% set img = 'assets/images/services/'~service.filename %}
                    <img class="img-fluid rounded shadow-sm" src="{{ asset(img|imagine_filter('730x486')) }}" alt="{{ service.alt }}">
                {% endif %}
                
                <div class="service-title">
                    <h1 class="mt-4">{{ service.name }}</h1>
                </div>
                
                <p>{{ service.description }}</p>
                <ul class="fa-ul">
                    {% for d in detail if service.id == d.service.id %}
                        <li><span class="fa-li" style="font-size: 0.6rem; margin-top: 5px"><i class="fas fa-check"></i></span>{{ d.name }}</li>
                    {% endfor %}    
                </ul>
            </div>
            <div class="col-lg-4">
                <div class="service-other">
                    <h4>Otros servicios:</h4>
                </div>
                <div class="list-group">
                    {% for s in allServices if s.id != service.id %}
                        <a href="{{ path('service_show', { 'slug': s.slug }) }}" class="list-group-item list-group-item-action text-muted">
                            <i class="{{ s.icon }} fa-fw"></i> {{ s.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
