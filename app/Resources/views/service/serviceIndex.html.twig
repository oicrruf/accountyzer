{% extends 'templates/base.html.twig' %}
{% block title %}Servicios | Accountyzer {% endblock %}
{% block body %}
    {% for service in services %}
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                        <a class="service-home" href="{{ path('service_show', { 'slug': service.slug }) }}">
                            <h2 class="mb-3">
                            <i class="{{ service.icon }} fa-fw"></i>
                            {{ service.name }}
                            </h2>
                        </a>
                        <p>{{ service.description }}</p>
                    </div>
                    <div class="col-lg-7">
                        <ul class="fa-ul">
                            {% for d in detail %}
                                {% if service.id == d.service.id %}
                                    <li><span class="fa-li" style="font-size: 0.6rem; margin-top: 5px"><i class="fas fa-check"></i></span>{{ d.name }}</li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    {% endfor %}
{% endblock %}