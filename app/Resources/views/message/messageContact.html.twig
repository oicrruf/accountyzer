{% extends 'templates/base.html.twig' %}
{% block body %}
<section>
    <div class="container animated fadeIn">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}

                        {{ form_label(form.name) }}: *
                        {{ form_widget(form.name) }}
                        {% if not form.name.vars.valid %}
                            <div class="message-error">
                                <i class="fas fa-exclamation-circle"></i>
                                Debe ingresar un nombre.
                            </div>
                        {% endif %}

                        {{ form_label(form.email) }}: *
                        {{ form_widget(form.email) }}
                        {% if not form.email.vars.valid %}
                            <div class="message-error">
                                <i class="fas fa-exclamation-circle"></i>
                                La dirección de correo electrónico ingresada no es válida.
                            </div>
                        {% endif %}

                        {{ form_label(form.phone) }}:
                        {{ form_widget(form.phone) }}
                        {% if not form.phone.vars.valid %}
                            <div class="message-error">
                                <i class="fas fa-exclamation-circle"></i>
                                El número telfónico debe de ser igual o mayor a 8 digitos.
                            </div>
                        {% endif %}
                        
                        {{ form_label(form.subject) }}: *
                        {{ form_widget(form.subject) }}
                        {% if not form.subject.vars.valid %}
                            <div class="message-error">
                                <i class="fas fa-exclamation-circle"></i>
                                Debes escribir brevemente sobre que se trata tu mensaje.
                            </div>
                        {% endif %}

                        {{ form_label(form.message) }}: *
                        {{ form_widget(form.message) }}
                        {% if not form.message.vars.valid %}
                            <div class="message-error">
                                <i class="fas fa-exclamation-circle"></i>
                                Debe ingresar un mensaje.
                            </div>
                        {% endif %}

                        {{ form_label(form.service) }}:
                        {{ form_widget(form.service) }}
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                            <i class="fas fa-envelope"></i> Enviar
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-lg-6">
                <h4 class="mb-4">¿Cómo llegar?</h4>
                {% for i in information %}
                    <div class="map" style="height: 250px">
                        {{ i.map|raw }}
                    </div>
                {% endfor %}
                <div id="info" class="mt-5">
                    <div class="row">
                        <div class="col-lg-6">
                            <h5>
                                <i class="fas fa-map-marker-alt"></i>
                                Dirección:
                            </h5>
                            <address>
                                {% for i in information %}
                                    <p class="mb-2">{{ i.address|raw }}</p>
                                    <p>{{ i.city }}, {{ i.state }}</p>
                                {% endfor %}
                            </address>
                        </div>
                        <div class="col-lg-6">
                            {% for i in information %}
                                <h5>
                                    <i class="fas fa-phone"></i>
                                    Teléfono:
                                </h5>
                                <p>+503 {{i.phone}}</p>
                            {% endfor %}
                            <h5>
                                <i class="fas fa-at"></i>
                                Correo electrónico:
                            </h5>
                            <a href="mailto:soporte@accountyzer.com">soporte@accountyzer.com</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
